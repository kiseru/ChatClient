<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            maxHeight="285.0"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="414.0"
            prefWidth="300.0"
            styleClass="background"
            stylesheets="/stylesheets/main.css"
            xmlns="http://javafx.com/javafx/8"
            fx:controller="com.alex.chatclient.ConnectionController">
  <BorderPane layoutX="-1.0"
              layoutY="-1.0"
              prefHeight="414.0"
              prefWidth="300.0"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
    <bottom>
      <AnchorPane prefHeight="72.0" prefWidth="300.0">
        <Button alignment="CENTER"
                layoutX="14.0"
                layoutY="16.0"
                mnemonicParsing="false"
                onMouseClicked="#connectHandle"
                prefHeight="40.0"
                prefWidth="120.0"
                text="Подключиться"
                BorderPane.alignment="CENTER"/>

        <Button alignment="CENTER"
                layoutX="166.0"
                layoutY="17.0"
                minWidth="0.0"
                mnemonicParsing="false"
                prefHeight="39.0"
                prefWidth="120.0"
                text="Выйти"
                onMouseClicked="#exitHandle"/>
      </AnchorPane>
    </bottom>

    <center>
      <Pane prefHeight="329.0" prefWidth="300.0" BorderPane.alignment="CENTER">
        <TextField fx:id="nameTextField"
                   alignment="CENTER"
                   layoutX="50.0"
                   layoutY="49.0"
                   prefHeight="40.0"
                   prefWidth="200.0"/>

        <TextField fx:id="groupTextField"
                   alignment="CENTER"
                   layoutX="50.0"
                   layoutY="134.0"
                   prefHeight="40.0"
                   prefWidth="200.0"/>

        <Label layoutX="116.0" layoutY="105.0" text="Группа">
          <font>
            <Font size="18.0"/>
          </font>
        </Label>

        <Label layoutX="131.0" layoutY="22.0" text="Имя">
          <font>
            <Font size="18.0"/>
          </font>
        </Label>
      </Pane>
    </center>
    <top>
      <AnchorPane styleClass="title">
        <Label alignment="CENTER"
               contentDisplay="CENTER"
               prefHeight="75.0"
               prefWidth="300.0"
               styleClass="title-text"
               text="Alexis Chat"
               BorderPane.alignment="CENTER"/>
      </AnchorPane>
    </top>
  </BorderPane>
</AnchorPane>
